        WHEN 'N' .   lv_tail = 14.
        WHEN 'O' .   lv_tail = 15.
        WHEN 'P' .   lv_tail = 16.
        WHEN 'Q' .   lv_tail = 17.
        WHEN 'R' .   lv_tail = 18.
        WHEN 'S' .   lv_tail = 19.
        WHEN 'T' .   lv_tail = 20.
