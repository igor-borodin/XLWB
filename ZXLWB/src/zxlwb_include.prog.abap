      WITH r_relid  EQ lcl_form=>c_relid
      WITH r_title  EQ lv_title
      WITH so_objid IN so_objid
       AND RETURN .

*     r_back is space -> F3 pressed else r_back = N
    IMPORT back TO lv_back FROM MEMORY ID 'webrfc' .
    CHECK lv_back EQ 'N' .

