        check_recurs( is_data_parent   = ls_data
                      is_legacy_parent = ls_legacy ) .
      ENDIF .

      IF ls_data-hierarchy-next IS INITIAL .
        EXIT .
      ELSE .
        lv_id_next = ls_data-hierarchy-next .
      ENDIF .
    ENDDO .

