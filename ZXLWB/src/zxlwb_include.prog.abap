              ls_new_form_prop-comp_name      = ls_comp_paths-comp_name .
              ls_new_form_prop-comp_descr     = ls_comp_paths-comp_shortdescr .
              ls_new_form_prop-cb_val_relpath = ls_comp_paths-cb_relpath .

