  METHOD check_recurs .

    DATA:
      ls_data    TYPE ty_s_check_data,
      ls_legacy  TYPE ty_s_check_legacy_info,
      lv_id_next TYPE snode-id.
    FIELD-SYMBOLS:
      <properties>        TYPE ty_s_properties .

    lv_id_next = is_data_parent-hierarchy-child .

    DO .
      CLEAR ls_data .

