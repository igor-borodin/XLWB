  METHOD compose_process_tree .
    DATA:
      ls_patterns     TYPE lcl_excel=>ty_s_patterns,
      ls_patterns_a   TYPE lcl_excel=>ty_s_patterns,
      lt_patterns_a   TYPE lcl_excel=>ty_t_patterns,
