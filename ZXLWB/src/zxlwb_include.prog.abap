    r_formtree->get_expanded_nodes( CHANGING ct_expanded_nodes = lt_expanded_nodes ) .
    READ TABLE lt_expanded_nodes TRANSPORTING NO FIELDS WITH KEY table_line = iv_alvtree_nkey .
