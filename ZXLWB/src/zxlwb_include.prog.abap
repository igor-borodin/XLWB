  METHOD bufferization_patterns .

    TYPES:
      BEGIN OF ty_s_datavalid_tmp .
        INCLUDE               TYPE ty_s_coordinates .
        INCLUDE               TYPE ty_s_datavalidation .
    TYPES:
      END   OF ty_s_datavalid_tmp ,
