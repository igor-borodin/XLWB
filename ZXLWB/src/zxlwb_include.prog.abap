      lv_exit     TYPE flag,
      ls_outtab   TYPE ty_s_outtab,
      lt_outtab   TYPE ty_t_outtab.
    FIELD-SYMBOLS:
      <field>  TYPE any,
      <outtab> TYPE ty_s_outtab.

