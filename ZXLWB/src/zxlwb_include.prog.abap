  METHOD conv_cn .
    DATA:
      lv_char     TYPE ty_char1024,
      lv_tail     TYPE i,
      lv_strlen   TYPE i,
      lv_offset   TYPE i,
      lv_exponent TYPE i.
    FIELD-SYMBOLS:
      <symbol>          TYPE ty_char1 .

    lv_char = iv_char .

*-->> improve performance (direct value without calculations)
    CASE lv_char.
      WHEN 'A' .   ev_number = 1 .  EXIT .
