        lv_string_tmp = <manual_pgbrk>-id . CONDENSE lv_string_tmp .
        lr_element-brk->set_attribute( name  = c_tag-id value = lv_string_tmp ) .

        lv_string_tmp = '16383' .
        lr_element-brk->set_attribute( name  = c_tag-max value = lv_string_tmp ) .

