    lv_offset = -1 .

    DO lv_strlen TIMES .
      lv_exponent = lv_strlen - sy-index .
      ADD 1 TO lv_offset .

      ASSIGN lv_char+lv_offset(1)
          TO <symbol> .

      CASE <symbol>.
        WHEN 'A' .   lv_tail = 1 .
        WHEN 'B' .   lv_tail = 2 .
        WHEN 'C' .   lv_tail = 3 .
        WHEN 'D' .   lv_tail = 4 .
