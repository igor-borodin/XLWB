      WHEN c_tb_direction-left2right .
        cs_legacy-tb_area_left = cs_parent_legacy-tb_area_prew_left +
                                 cs_parent_legacy-tb_area_prew_columns .

        cs_legacy-tb_area_top  = cs_parent_legacy-tb_area_prew_top .
