      WHEN 'V' .   ev_number = 22.  EXIT .
      WHEN 'W' .   ev_number = 23.  EXIT .
      WHEN 'X' .   ev_number = 24.  EXIT .
      WHEN 'Y' .   ev_number = 25.  EXIT .
