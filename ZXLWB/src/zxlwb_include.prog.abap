        WHEN 'W' .   lv_tail = 23.
        WHEN 'X' .   lv_tail = 24.
        WHEN 'Y' .   lv_tail = 25.
        WHEN 'Z' .   lv_tail = 26.
        WHEN OTHERS. CLEAR ev_number. EXIT .
      ENDCASE .

      ev_number = ev_number + lv_tail * ( 26 ** lv_exponent ) .
    ENDDO .

  ENDMETHOD .                                               "conv_cn
