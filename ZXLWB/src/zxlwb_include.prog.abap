        IF <nopgbrk_range>-end_x LT ls_nopgbrk_range-end_x .
          <nopgbrk_range>-end_x = ls_nopgbrk_range-end_x .
        ENDIF .
      ENDLOOP .
      CHECK sy-subrc NE 0 .

